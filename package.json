{
	"name": "vincentvandijck",
	"version": "1.0.0",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/vvandijck/vincentvandijck.git"
	},
	"homepage": "https://www.vincentvandijck.nl",
	"scripts": {
		"start": "next start",
		"dev": "NODE_ENV=development next dev",
		"build": "NODE_ENV=production next build",
		"lint": "yarn run lint:js && yarn run lint:css",
		"lint:css": "stylelint '{components,styles}/**/*.less' --syntax less",
		"lint:js": "yarn prettier --check",
		"format": "yarn run format:js && yarn run format:css",
		"format:css": "stylelint '{components,styles}/**/*.less' --syntax less --fix",
		"format:js": "yarn prettier --write",
		"prettier": "prettier '{api,components,lib,pages}/**/*.js'"
	},
	"dependencies": {
		"@zeit/next-less": "^1.0.1",
		"dotenv": "^10.0.0",
		"graphql": "^15.5.3",
		"graphql-request": "^3.6.1",
		"less": "^4.1.2",
		"next": "^10.2.3",
		"next-pwa": "^5.4.0",
		"preact": "^10.5.15",
		"preact-render-to-string": "^5.1.19",
		"react": "^16.13.1",
		"react-datocms": "^1.6.6",
		"react-dom": "^16.13.1",
		"react-ssr-prepass": "^1.4.0"
	},
	"devDependencies": {
		"prettier": "^2.4.1",
		"raw-loader": "^4.0.2",
		"stylelint": "^14.0.1",
		"stylelint-config-standard": "^23.0.0",
		"webpack": "^4.46.0"
	},
	"engines": {
		"node": "12.x"
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"printWidth": 120,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"color-hex-length": "long",
			"declaration-colon-newline-after": null,
			"function-calc-no-invalid": null,
			"indentation": "tab",
			"no-descending-specificity": null,
			"no-empty-source": null,
			"no-eol-whitespace": null,
			"number-leading-zero": "never",
			"selector-list-comma-newline-after": null,
			"selector-pseudo-element-colon-notation": "double"
		}
	}
}
